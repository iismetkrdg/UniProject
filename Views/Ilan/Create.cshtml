@model EduProject.Models.Ilan

@{
    ViewData["Title"] = "Create";
}


<div class="col-md-8 offset-md-2">
    <h4>İlan Bilgileri</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Arıyor" />< Ev Arıyorum
                    </label>
                </div>
                <div class="form-group mt-2 mb-3">
                    <label asp-for="Message" class="control-label"></label>
                    <input asp-for="Message" class="form-control" required/>
                    <label hidden for="iletisim"></label>
                    <input hidden name="iletisim" for="iletisim" class="form-control" value="@ViewBag.Userad">
                </div>
                <div class="form-group mb-3 text-center">
                    <input type="submit" value="Create" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index" class="nav-link text-success border text-center">Listeye Dön</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
