@model EduProject.Models.ForumBaslik

@{
    ViewData["Title"] = "Create";
}


<div class="row col-md-8 offset-md-2">
    <h4>Forum Başlatma Ekranı</h4>
    <hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label mt-2">Forum Başlığı</label>
            <input asp-for="Name" class="form-control" required/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Creator" class="control-label mt-2">Kimsiniz</label>
            <input asp-for="Creator" class="form-control" required/>
            <span asp-validation-for="Creator" class="text-danger"></span>
        </div>
        <input type="submit" value="Create" class="mt-3 btn btn-primary" />
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
