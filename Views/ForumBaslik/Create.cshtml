@model EduProject.Models.ForumBaslik

@{
    ViewData["Title"] = "Create";
}


<div class="row col-md-8 offset-md-2">
    <h4>Forum Başlatma Ekranı</h4>
    <hr />
    <form asp-action="Create">
        <div class="form-group">
            <label for="Name" class="control-label mt-2">Forum Başlığı</label>
            <input for="Name" name="Name" class="form-control" placeholder="@ViewBag.Userad olarak yazıyorsunuz." required/>
        </div>
        <div class="form-group">
            <label for="Creator" class="control-label mt-2" hidden>Kimsiniz</label>
            <input for="Creator" name="Creator" class="form-control" value="@ViewBag.Userad" hidden />
        </div>
        <input type="submit" value="Create" class="mt-3 btn btn-primary" />
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
