@model EduProject.ViewModels.DersNotuCreateViewModel

@{
    ViewData["Title"] = "Ders Notu Paylaş";
}

<div class="col-md-8 offset-md-2">
    <h1>Ders Notu Paylaşma Ekranı</h1>
    <hr/>

    <form method="post" enctype="multipart/form-data" asp-controller="DersNotu"  asp-action="Create">
        <div class="form-group">
            <span asp-validation-for="Konu" class="text-danger"></span>


            <label asp-for="Konu" class="control-label">Ders Notu Konusu</label>
            <input asp-for="Konu" class="form-control" required/>

            <label for="DersAdı" class="mt-2">Ders Seçin</label>
            <select name="DersAdı" class="form-select mt-1" required>
            @foreach (var item in ViewBag.Dersler)
            {
                <option value="@item.Name">@item.DersKodu:@item.Name</option>
            }
            </select>

            <input asp-for="FilePath" class="form-control mt-3" multiple required>
        
            <input type="submit" value="Create" class="mt-3 btn btn-primary" />
        </div>
    </form>
    <div class="mt-4">
        <a asp-action="Index">Listeye Dön</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
